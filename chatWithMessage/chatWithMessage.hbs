<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

<div class="container">

  <div class="allChats">

    <div class="profile">Профиль</div>

        <form class="form1">
          <input class="imput1" type="text" placeholder="Поиск">
          <button class="button1"type="submit"></button>
        </form>

    <div class="linebreak"></div>

    {{#each fields}}
    <div class="allChats__item">
        <div class="allChats__itemPic"></div>  
          <div class="allChats__itemWrapper1">
            <div class="allChats__itemName">{{allChatsName}}</div>
            <div class="allChats__itemMessage">{{allChatsMessage}}</div>
          </div>

          <div class="allChats__itemWrapper2">
            <div class="allChats__itemTime">{{allChatsTime}}9</div>
            <div class="allChats__itemUnreadMes">{{allChatsUnreadMes}}</div>
          </div>
    </div>
    <div class="linebreak"></div>
    {{/each}}    

    
    
</div>

 <div class="chat">

      <div class="chatTytleContainer">
        
        <div class="chat__tytle">

          <div class="chat__tytle__left">
            <div class="chat__itemPic"></div>
            {{#each chatData}}
            <div class="chat__itemName">{{chatName}}</div>
            {{/each}}   
          </div>

          <div class="dots">•••</div>

        </div>
      
      <div class="chat__linebreak"></div>

    </div>

        

    <div class="chat__container">

        <div class="greyText">19 июня</div>

        {{#each chatData}}
        <div class="chat__message">
          <div class="chat__messageText">{{chatMessage}}</div>
          <div class="chat__time">{{chatTime}}</div>
        </div>
         {{/each}}

        {{#each chatData}}
        <div class="chat__replies">{{chatReply}}</div>
        {{/each}}   
    </div>

        
        
    <div class="chat__bottom">
      
        <div class="chat__linebreak"></div>

        <form class="form1">
          <input class="imput2" type="text" placeholder="Поиск">
        </form>

    </div>
      
 </div>

</div>
  </body>
</html>
